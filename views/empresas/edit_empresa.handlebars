<div class="container">
    <h3 class="text-gray-800"> Editar empresa </h3>
    {{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
    {{else}}
    {{/each}}
    <form action="/empresas/{{ empresa.id }}?_method=PUT" method="post">
        <div class="form-group">
            <label class="text-gray-800" for="nombre">Nombre de la empresa</label>
            <input type="text" class="form-control" placeholder="Empresa" name="nombre" value="{{empresa.nombre}}"
                required>
        </div>
        <div class="form-group">
            <label class="text-gray-800" for="usuario">Usuario jefe de la empresa</label>
            <select name="usuario" class="custom-select" id="inputGroupSelect01">
                <option value="{{ empresa.usuario.id }}" selected>{{ empresa.usuario.nombre }}
                    {{ empresa.usuario.apellido }}</option>
                {{#each usuarios}}
                <option value="{{ id }}">{{ nombre }} {{ apellido }}</option>
                {{/each}}
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>