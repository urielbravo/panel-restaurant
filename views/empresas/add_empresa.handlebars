<div class="container">
    {{#each errors}}
    <div class="alert alert-danger">{{text}}</div>
    {{else}}
    {{/each}}
    <form action="/empresas" method="post">
        <div class="form-group">
            <label class="text-gray-800" for="nombre">Nombre de la empresa</label>
            <input type="text" class="form-control" placeholder="Empresa" name="nombre" required>
        </div>
        <div class="form-group">
            <label class="text-gray-800" for="usuario">Usuario jefe de la empresa</label>
            <select name="usuario" class="custom-select" id="inputGroupSelect01">
                <option selected>Selecciona un usuario...</option>
                {{#each usuarios}}
                <option value="{{ id }}">{{ nombre }} {{ apellido }}</option>
                {{/each}}
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>