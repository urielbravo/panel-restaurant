<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Empresas</h1>
    <a href="empresas/add" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i class="fas fa-plus"></i>
        agregar
        empresa</a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Lista de empresas registradas</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Nombre</th>
                        <th>Encargado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Nombre</th>
                        <th>Encargado</th>
                        <th>Acciones</th>
                    </tr>
                </tfoot>
                <tbody>

                    {{#each empresas}}
                    <tr>
                        <td>{{ nombre }}</td>
                        <td>{{ usuario.nombre }} {{ usuario.apellido }}</td>
                        <td>
                            <div class="container">
                                <div class="row">
                                    <a href="/empresas/edit/{{id}}" class="btn btn-success btn-icon-split">
                                        <span class="icon text-white-50">
                                            <i class="fas fa-edit"></i>
                                        </span>
                                        <span class="text">Editar</span>
                                    </a>
                                    <form action="/empresas/{{id}}?_method=DELETE" method="post">
                                        <input type="hidden" name="_method" value="DELETE">
                                        <button type="submit" class="btn btn-danger btn-icon-split"
                                            onclick="return confirm('Seguro que deseas eliminar la empresa {{ nombre }}?');"
                                            value="Eliminar">
                                            <span class="icon text-white-50">
                                                <i class="fas fa-trash"></i>
                                            </span>
                                            <span class="text">Eliminar</span>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </td>
                        {{else}}
                        <td>No existen empresas registradas</td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>